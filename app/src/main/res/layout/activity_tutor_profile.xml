<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2B536">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:padding="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/ProfilePicture"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/back_button"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_pic"
        android:contentDescription="Profile Picture" />

    <!-- Full Name -->
    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: John Doe"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/ProfilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Role -->
    <TextView
        android:id="@+id/roleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Tutor"
        android:textSize="26sp"
        android:layout_below="@id/fullNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: johndoe@gmail.com"
        android:textSize="26sp"
        android:layout_below="@id/roleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/onboardingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onboarding: Pending"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailTextView"
        android:layout_marginTop="20dp" />


</RelativeLayout>
