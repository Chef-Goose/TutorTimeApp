<!-- tutor_availability.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2B536">

    <!-- Logo Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F2B536"
        android:contentDescription="Logo"
        android:src="@drawable/logo" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Spinner for selecting course -->
    <Spinner
        android:id="@+id/spinner_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginStart="16dp"
        android:entries="@array/course_list"
        android:spinnerMode="dropdown"
        android:hint="@string/select_course_hint" />

    <!-- EditText for typing certificate -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tb_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Certificate"
        android:layout_below="@id/spinner_courses"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Spinner for selecting time -->
    <Spinner
        android:id="@+id/spinner_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_certificate"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:entries="@array/time_list"
        android:spinnerMode="dropdown"
        android:hint="@string/select_time_hint" />

    <!-- Calendar view for picking a date -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_time"
        android:layout_marginTop="16dp"
        android:layout_marginStart="31dp" />

    <!-- Save Availability Button -->
    <Button
        android:id="@+id/btn_saveAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Availability"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="123dp" />


</RelativeLayout>
